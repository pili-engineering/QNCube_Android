<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/log_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:alpha="0.5"
        android:background="#49494B"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/local_log_text_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/local_log_text_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#CD5849" />

        <TextView
            android:id="@+id/remote_log_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:maxHeight="200dp"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textColor="@color/white" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/log_shown_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

         android:padding="24dp"
        android:background="#0000"
        android:src="@drawable/log_btn" />
</FrameLayout>