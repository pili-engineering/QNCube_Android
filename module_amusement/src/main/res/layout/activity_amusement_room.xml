<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMicSeatContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/am_room_bg"
    tools:context=".AmusementRoomActivity">

    <FrameLayout
        android:id="@+id/micSeatContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.niucube.playersdk.QNAudienceVideoPlayerView
            android:id="@+id/plRoomPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyMicSeatSurfaces"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyMicSeats"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/flRoomCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</androidx.constraintlayout.widget.ConstraintLayout>